@model IEnumerable<SorveteriaApp.Application.DTOs.SaborDto>

@{
    ViewData["Title"] = "Cat√°logo de Sabores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">üç¶ Cat√°logo de Sabores</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Novo Sabor
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h3>Nenhum sabor cadastrado</h3>
            <p class="mb-3">Comece adicionando o primeiro sabor ao cat√°logo!</p>
            <a asp-action="Create" class="btn btn-primary">Cadastrar Primeiro Sabor</a>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>C√≥digo</th>
                                <th>Sabor</th>
                                <th>Cobertura</th>
                                <th>Pre√ßo/Kg</th>
                                <th>Status</th>
                                <th>Data Cadastro</th>
                                <th class="text-center">A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><code>@item.CodigoProduto</code></td>
                                    <td><strong>@item.Nome</strong></td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Categoria</span>
                                    </td>
                                    <td>@item.PrecoPorKg.ToString("C")</td>
                                    <td>
                                        @if (item.Disponivel)
                                        {
                                            <span class="badge bg-success">Dispon√≠vel</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Indispon√≠vel</span>
                                        }
                                    </td>
                                    <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total de sabores:</strong> @Model.Count() | 
                <strong>Dispon√≠veis:</strong> @Model.Count(s => s.Disponivel) | 
                <strong>Indispon√≠veis:</strong> @Model.Count(s => !s.Disponivel)
            </p>
        </div>
    }
</div>