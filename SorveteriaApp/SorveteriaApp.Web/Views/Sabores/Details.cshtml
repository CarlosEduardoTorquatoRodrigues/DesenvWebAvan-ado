@model SorveteriaApp.Application.DTOs.SaborDto

@{
    ViewData["Title"] = "Detalhes do Sabor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">üç¶ Detalhes do Sabor</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12 text-center">
                            <h3 class="display-5">@Model.Nome</h3>
                            @if (Model.Disponivel)
                            {
                                <span class="badge bg-success fs-6">‚úì Dispon√≠vel</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">‚úó Indispon√≠vel</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">C√≥digo do Produto</h6>
                                    <h4><code class="text-primary">@Model.CodigoProduto</code></h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Cobertura</h6>
                                    <h4>
                                        <span class="badge bg-secondary fs-6">@Model.Categoria</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Pre√ßo por Quilograma</h6>
                                    <h3 class="text-success mb-0">@Model.PrecoPorKg.ToString("C")</h3>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Data de Cadastro</h6>
                                    <h4>@Model.DataCriacao.ToString("dd/MM/yyyy")</h4>
                                    <small class="text-muted">@Model.DataCriacao.ToString("HH:mm:ss")</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <h6 class="alert-heading">
                                    <i class="bi bi-info-circle"></i> Informa√ß√µes Adicionais
                                </h6>
                                <p class="mb-0">
                                    <strong>Status:</strong> 
                                    @if (Model.Disponivel)
                                    {
                                        <span>Este sabor est√° dispon√≠vel para venda e pode ser adquirido pelos clientes.</span>
                                    }
                                    else
                                    {
                                        <span>Este sabor est√° temporariamente indispon√≠vel.</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar √† Lista
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>