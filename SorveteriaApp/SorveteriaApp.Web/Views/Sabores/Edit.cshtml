@model SorveteriaApp.Application.DTOs.SaborUpdateDto

@{
    ViewData["Title"] = "Editar Sabor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h2 class="mb-0">✏️ Editar Sabor</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label">Cobertura</label>
                            <select asp-for="Categoria" class="form-select">
                                <option value="">Selecione uma cobertura</option>
                                <option value="Frutas">Frutas</option>
                                <option value="Chocolate">Chocolate</option>
                                <option value="Cremoso">Cremoso</option>
                                <option value="Especial">Especial</option>
                                <option value="Diet">Diet</option>
                                <option value="Zero Açúcar">Zero Açúcar</option>
                                <option value="Caramelo">Caramelo</option>
                                <option value="Morango">Morango</option>
                                <option value="Doce de Leite">Doce de Leite</option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CodigoProduto" class="form-label"></label>
                            <input asp-for="CodigoProduto" class="form-control text-uppercase" 
                                   maxlength="7" />
                            <small class="form-text text-muted">
                                Formato: 3 letras maiúsculas + 4 números (ex: SOR0001)
                            </small>
                            <span asp-validation-for="CodigoProduto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecoPorKg" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="PrecoPorKg" class="form-control" 
                                       type="number" step="0.01" min="0.01" max="999.99" />
                            </div>
                            <span asp-validation-for="PrecoPorKg" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Disponivel" class="form-check-input" 
                                       type="checkbox" role="switch" />
                                <label asp-for="Disponivel" class="form-check-label"></label>
                            </div>
                            <small class="form-text text-muted">
                                Marque se o sabor está disponível para venda
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Converter código do produto para maiúsculas automaticamente
        document.querySelector('input[name="CodigoProduto"]').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
}